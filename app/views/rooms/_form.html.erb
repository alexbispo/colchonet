<%= form_for(@room) do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <%= t 'general.form_error' %>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    <%= error_tag @room, :title%>
  </p>
  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
    <%= error_tag @room, :location%>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
    <%= error_tag @room, :description%>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
